{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.rest.js",
  "scripts": {
    "start": "npm run build && node ./dist/src/main.rest.js",
    "start:dev": "npm run build && node ./dist/src/main.rest.js | pino-pretty --colorize --translateTime SYS:standard",
    "cli": "npm run build && node ./dist/main.cli.js",
    "json-server": "json-server --watch src/mocks/mock-server-data.json --port 3000",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/eslint": "^9.6.1",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "^9.37.0",
    "eslint-config-htmlacademy": "9.1.1",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "typescript-eslint": "^8.46.1"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^17.2.3",
    "inversify": "^7.10.2",
    "json-server": "^1.0.0-beta.3",
    "pino": "^9.13.0",
    "reflect-metadata": "^0.2.2"
  }
}
