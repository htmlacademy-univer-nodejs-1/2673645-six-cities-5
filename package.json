    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "chalk": "^5.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^7.10.2",
    "jose": "^6.1.3",
    "json-server": "^1.0.0-beta.3",
    "mime-types": "^3.0.2",
    "mongoose": "^8.19.1",
