    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/mime-types": "^3.0.1",
    "@types/multer": "^2.0.0",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "^5.9.3"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
